<div class="container mt-5 text-center">  
  <h2 class="pt-5">Inscrever-se</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "admins/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :Senha %>
      <% if @minimum_password_length %>
      <em>( No minimo<%= @minimum_password_length %> caracteres. )</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :confirmar_senha %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Inscrever-se", class:"btn btn-success" %>
    </div>
  <% end %>

  <%= render "admins/shared/links" %>
</div>