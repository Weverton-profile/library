<% if admin_signed_in? %>
  <div class="container mt-5">
    <p id="notice"><%= notice %></p>

    <h1 class="display-4 mt-5 pt-5 text-center">Livros</h1>

    <table class="table table-bordered table-hover">
      <thead class="thead-dark">
        <tr>
          <th>Nome</th>
          <th>Descrição</th>
          <th>Imagem</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.book_name %></td>
            <td><%= book.description %></td>
            <td><%= image_tag book.url_image, width: 80, height: 100 %></td>
            <td><%= link_to 'Mostrar', book, class:"btn btn-primary text-white" %></td>
            <td><%= link_to 'Editar', edit_book_path(book), class:"btn btn-warning text-white" %></td>
            <td><%= link_to 'Apagar', book, class:"btn btn-danger text-white", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="text-center">
      <%= paginate @books %>
    </div>

    <br>

    <%= link_to 'Adicionar Novo Livro', new_book_path, class:"btn btn-success text-white mb-2"%>
  </div>
<% end %>