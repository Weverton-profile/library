<div class="container mt-5 py-5">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Nome:</strong>
    <%= @book.book_name %>
  </p>

  <p>
    <strong>Descrição:</strong>
    <%= @book.description %>
  </p>

  <p>
    <strong>Imagem:</strong>
    <%= image_tag @book.url_image, width: 80, height: 100 %>
  </p>

  <p>
    <strong>Nota:</strong>
    <%= @book.rating %>
  </p>

  <%= link_to 'Edit', edit_book_path(@book), class:"btn btn-warning text-white" %> |
  <%= link_to 'Back', books_path, class:"btn btn-primary text-white" %>
</div>