<div class="container mt-5 py-5">
  <div class="card flex-md-row mb-4 shadow-sm h-md-250">
    <div class="card-body d-flex flex-column align-items-start">
      <strong class="d-inline-block mb-2 text-primary"><%= @book.book_name %></strong>
      <p class="card-text mb-auto"><%= @book.description %></p>
    </div>
    <%= image_tag @book.url_image, class:"card-img-right flex-auto d-none d-lg-block", width:200, height:250 %>
  </div>

  <%= link_to 'Emprestimo', books_available_index_path, class:"btn btn-success text-white" %> |
  <%= link_to 'Voltar', books_available_index_path, class:"btn btn-primary text-white" %>  
</div>